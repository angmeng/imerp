<%= image_tag("add_item2.png")%><%= link_to 'Add Return To Customer Item', item_new_page_customer_debit_note_path(@customer_debit_note) %>
<%= form_tag update_item_customer_debit_note_path(@customer_debit_note) do %>
<div class="mg10 exhibiton ex01">
            <div class="exHead">
               <div class="hTxt">
                   <div class="hTxtContent"><h2>Return To Customer Items</h2></div>
                  </div>
                <div class="hLeft"></div>
                <div class="hRight"></div>
            </div>
            <div class="exBody">
            <div class="content">

               <%#*<strong>Customer</strong><%= select_tag("customer[customer_id]", options_for_select(Customer.selections, @customer_debit_note.customer_id))  %>
                <%#*<br><br>%>
                <table class="flexi" style="font-size: 12px">
                 <thead>
                  <tr>
                     <th width="80" align="center" style="font-size: 12px"><strong><input type="checkbox" name="checkall" onclick="checkUncheckAll(this);"/></strong></th>
                     <th width="130" align="center"style="font-size: 12px"><strong>Code</strong></th>
                    <th width="250" align="center"style="font-size: 12px"><strong>Description</strong></th>
                    <th width="150" align="center"style="font-size: 12px"><strong>UOM</strong></th>
                    <th width="150" align="center"style="font-size: 12px"><strong>Stock location</strong></th>
                    <th width="120" align="center"style="font-size: 12px"><strong>Quantity</strong></th>
                    <th width="120" align="center"style="font-size: 12px"><strong>Unit Price</strong></th>
                    <th width="120" align="center"style="font-size: 12px"><strong>Total</strong></th>
                  </tr>
                  </thead>
                 <tbody>
                <% @customer_debit_note.customer_debit_note_items.each do |p| %>
                    <tr class="<%= cycle("odd", "even") %>" align="center">
                    <td align="center"><%= check_box_tag("item[#{p.id.to_s}][selected]")  %> </td>
                    <td align="center"><%= p.product.code  %> </td>
                    <td align="center"><%= p.product.full_description  %> </td>
                    <td align="center"><%= select_tag("item[#{p.id.to_s}][product_uom_id]", options_for_select(p.product.product_uom_options.map {|c| [c.name, c.id]}, p.product_uom_id))  %> </td>
                    <td align="center"><%= select_tag "item[#{p.id.to_s}][stock_location_id]", options_for_select(p.product.stock_location_options, p.stock_location_id),:include_blank => 'None' %> </td>
                    <td align="center"><%= text_field_tag("item[#{p.id.to_s}][quantity]", {}, :value => p.quantity, :size => 5)  %> </td>
                    <td align="center"><%= text_field_tag("item[#{p.id.to_s}][unit_price]", {},  :value => "%.2f" % p.unit_price, :size => 10)  %> </td>
                    <td align="center"><%= "%.2f" % p.total  %> </td>
                  </tr>
                 <% end %>
                </tbody>
                </table>
                <table>
                  <tr>
                    <td align="center">
                       <%= submit_tag "Remove items" unless @customer_debit_note.customer_debit_note_items.empty? %>
                    </td>
                    <td  align="center"><%= submit_tag "Update items" unless @customer_debit_note.customer_debit_note_items.empty?  %></td>

                  </tr>
                </table>
                <% end %>
                <script type="text/javascript">
                   $('.flexi').flexigrid({width: $('#header').width() - 80});
                   </script>
                </fieldset>
              </div>
            </div>
          <div class="exFoot">
              <div class="fLeft"></div>
              <div class="fRight"></div>
          </div>
          </div>

