 <%= link_to image_tag("backs.png", :title => "Back"), edit_pack_path(@pack_item.pack) %>

<%= form_tag update_subitem_pack_path(@pack_item) do %>

<div class="mg10 exhibiton ex01">
        <div class="exHead">
            <div class="hTxt">
               <div class="hTxtContent"><h2>Product Mixed Items</h2></div>
            </div>
            <div class="hLeft"></div>
            <div class="hRight"></div>
        </div>
        <div class="exBody">
            <div class="content">


                <table class="flexi" style="font-size: 12px">
                   <thead>
                    <tr>
                    
                      <th width="200" align="center"style="font-size: 12px"><strong>Code</strong></th>
                      <th width="300" align="center"style="font-size: 12px"><strong>Description</strong></th>
                      <th width="170" align="center"style="font-size: 12px"><strong>UOM</strong></th>
                      <th width="200" align="center"style="font-size: 12px"><strong>Stock location</strong></th>
                      <th width="190" align="center"style="font-size: 12px"><strong>Quantity</strong></th>
                      <th width="190" align="center"style="font-size: 12px"><strong>Cost</strong></th>

                    </tr>
                     </thead>
                   <tbody>
                  <% @pack_subitems.each do |p| %>
                    <tr class="<%= cycle "odd", "even"  %> ">
                      <td style="text-align: center"><%= p.product.code %></td>
                      <td style="text-align: center"><%= p.product.full_description %> </td>
                      <td style="text-align: center"><%= p.product_uom.name rescue "-"%> </td>
                      <td style="text-align: center"><%= select_tag "item[#{p.id.to_s}][stock_location_id]", options_for_select(p.product.stock_location_options, p.stock_location_id),:include_blank => 'None' %> </td>
                      <td style="text-align: center"><%=  p.quantity  %> </td>
                      <td style="text-align: center"><%= "%.2f" % p.cost %> </td>
                    </tr>

                   <% end %>
                    </tbody>
                  </table>
                  <table>
                    <tr>
                     
                      <td align="center"><%= submit_tag "Update info"  unless @pack_subitems.empty? %></td>
                      <td colspan="2"></td>
                    </tr>
                  </table>
                  <% end %>
                 <script type="text/javascript">
                   $('.flexi').flexigrid({width: $('#header').width() - 60});
                   </script>


</div>
</div>
    <div class="exFoot">
        <div class="fLeft"></div>
        <div class="fRight"></div>
    </div>
    </div>