<%= form_tag update_info_supplier_debit_note_path(@supplier_debit_note) do %>
<div class="mg10 exhibiton ex01">
        <div class="exHead">
            <div class="hTxt">
               <div class="hTxtContent"><h2>Received From Supplier Details</h2></div>
            </div>
            <div class="hLeft"></div>
            <div class="hRight"></div>
        </div>
        <div class="exBody">
            <div class="content">
              <table class="list">
                 <tr>
                  <th>Received From Supplier Number</th>
                  <th>Date</th>
                  <th>Supplier</th>
                  <th>Status</th>
                 </tr>
                 <tr align="center">
                  <td><%=h @supplier_debit_note.supplier_debit_note_number %></td>
                   <td><input type="text" size="12" id="datepicker" name="supplier_debit_note[supplier_debit_note_date]" value="<%= @supplier_debit_note.supplier_debit_note_date.strftime("%d-%m-%Y") %>"/></td>
                  <td><table border="0">
                       <tr>
                         <td style="background-color:lavender">
                          <table width="350"><tr><td bgcolor="#ffffff">
                                   <% if @supplier_debit_note.supplier_id > 0 %>
                                <%= @supplier_debit_note.supplier.name %>
                              <% else %>
                                None
                              <%end%>
                            </td></tr></table>
                          </td>
                          <td>
                            <%= link_to image_tag("add_users.png", :title => "Add Customer"), add_supplier_supplier_debit_note_path(@supplier_debit_note)%>
                          </td>
                       </tr>
                    </table> </td>
                  <td><%= raw @supplier_debit_note.status %> </td>
                 </tr>
              </table>
             

              <table class="list">
                <tr align="left">
                 <th align="left">Remark</th>
              </tr>
              <tr align="left">
              <td colspan="8"> <%= text_area_tag "supplier_debit_note[remark]", @supplier_debit_note.remark,{:style=>"width:600px;height:15px; "} %></td>
              </tr>
              </table>
              <p>
                 <%= submit_tag "Update info" %>
              </p>
              <% end %>
</div></div>
    <div class="exFoot">
        <div class="fLeft"></div>
        <div class="fRight"></div>
    </div>
    </div>
<script>
	$(function() {
		$( "#datepicker" ).datepicker({
			showOn: "button",
			buttonImage: "/images/calendar2.png",
			buttonImageOnly: true,
                        dateFormat: 'dd-mm-yy'
		});
	});
	</script>