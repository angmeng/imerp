<% content_for :head do %>
  <%= javascript_include_tag "smo" %>
<% end %>

 <%= link_to image_tag("backs.png", :title => "Back"), edit_supplier_debit_note_path(@supplier_debit_note) %>
<%= form_tag removed_item_supplier_debit_note_path(@supplier_debit_note) do %>
<div class="mg10 exhibiton ex01">
    <div class="exHead">
        <div class="hTxt">
           <div class="hTxtContent"><h2>Received From Supplier Items</h2></div>
        </div>
        <div class="hLeft"></div>
        <div class="hRight"></div>
    </div>
    <div class="exBody">
        <div class="content">
      
            <table class="flexi" style="font-size: 12px">
                   <thead>
                    <tr>
                      <th width="100" align="center"style="font-size: 12px"><strong><input type="checkbox" name="checkall" onclick="checkUncheckAll(this);"/></strong></th>
                      <th width="240" align="center"style="font-size: 12px"><strong>Code</strong></th>
                      <th width="240" align="center"style="font-size: 12px"><strong>UOM</strong></th>
                      <th width="600" align="center"style="font-size: 12px"><strong>Description</strong></th>


                    </tr>
                     </thead>
                   <tbody>
                  <% @supplier_debit_note.supplier_debit_note_items.each do |p| %>
                    <tr class="<%= cycle "odd", "even"  %> ">
                      <td style="text-align: center"><%= check_box_tag("item[#{p.id.to_s}][selected]", {})  %> </td>
                      <td style="text-align: center"><%= p.product.code  %> </td>
                      <td style="text-align: center"><%= p.product_uom.name rescue "-"%> </td>
                      <td style="text-align: center"><%= p.product.full_description  %> </td>
                    </tr>
                   </tbody>
                   <% end %>
                  </table>
                       <%= submit_tag "Remove items" unless @supplier_debit_note.supplier_debit_note_items.empty? %>
                  <% end %>
                  <script type="text/javascript">
                   $('.flexi').flexigrid({width: $('#header').width() - 80});
                   </script>

                  </fieldset>
  </div>
  </div>
      <div class="exFoot">
          <div class="fLeft"></div>
          <div class="fRight"></div>
      </div>
      </div>
<hr>
        <div class="mg10 exhibiton ex01">
            <div class="exHead">
               <div class="hTxt">
                   <div class="hTxtContent"><h2>Add Items</h2></div>
                  </div>
                <div class="hLeft"></div>
                <div class="hRight"></div>
            </div>
            <div class="exBody">
            <div class="content">
                <%= render "add_item" %>
            </div>
            </div>
          <div class="exFoot">
              <div class="fLeft"></div>
              <div class="fRight"></div>
          </div>
          </div>