<% title "Listing Product Brands" %>
<%= link_to image_tag("new.png"), new_product_brand_path %>
<br /><br />
<div class="mg10 exhibiton ex01">
    <div class="exHead">
        <div class="hTxt">
           <div class="hTxtContent"><h2>Product Brand</h2></div>
        </div>
        <div class="hLeft"></div>
        <div class="hRight"></div>
    </div>
    <div class="exBody">
        <div class="content">
            <%= will_paginate @product_brands %>
            <table class="list">
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Disabled</th>
                <th>Action</th>

              </tr>

            <% @product_brands.each do |product_brand| %>
              <tr class="<%= cycle "odd", "even"  %> " style="text-align: center">
                <td><%= product_brand.name %></td>
                <td><%= product_brand.description %></td>
                <td><%= product_brand.disabled %></td>
                <td><%= link_to 'Show', product_brand %>
                | <%= link_to 'Edit', edit_product_brand_path(product_brand) %>
                | <%= link_to 'Destroy', product_brand, :confirm => 'Are you sure?', :method => :delete %></td>
              </tr>
            <% end %>
            </table>

            <br />
</div>
</div>
    <div class="exFoot">
        <div class="fLeft"></div>
        <div class="fRight"></div>
    </div>
    </div>


