
<%= image_tag("add_item2.png")%><%= link_to 'Add Product Rack', new_rack_product_rack_path(@product_location), :class=>"nyroModal" %>
<div class="mg10 exhibiton ex01">
    <div class="exHead">
        <div class="hTxt">
           <div class="hTxtContent"><h2>Product Location Details: <%=@product_location.name%> </h2></div>
        </div>
        <div class="hLeft"></div>
        <div class="hRight"></div>
    </div>
    <div class="exBody">
        <div class="content">
            <%= will_paginate @racks %><br></br>
             <table class="flexi" style="font-size: 12px">
              <thead>
               <tr>
                  <th width="250" align="center" style="font-size: 12px"><strong>Rack Name</strong></th>
                  <th width="420" align="center" style="font-size: 12px"><strong>Description</strong></th>
                  <th width="150" align="center" style="font-size: 12px"><strong>Disabled</strong></th>
                  <th width="350" align="center" style="font-size: 12px"><strong>Action</strong></th>
                </tr>
              </thead>
              <tbody>

                <% @racks.each do |u| %>
                  <tr class="<%= cycle "odd", "even"  %> " style="text-align: center">
                  <td>
                    <%= u.name %>
                  </td>
                  <td>
                    <%= u.description %>
                  </td>

                  <td>
                    <%= u.disabled %>
                  </td>
                  <td>
                    <%= link_to "Edit", edit_rack_product_rack_path(u) %> |
                    <%= link_to "Stocks", edit_product_rack_path(u) %> |
                    <%= link_to "Remove", u, :confirm => "This will delete the attached stocks as well. Are you sure ?", :method => :delete %>
                  </td>
                </tr>

                <% end %>
              </tbody>
            </table>
           </div>
   </div>
    <div class="exFoot">
        <div class="fLeft"></div>
        <div class="fRight"></div>
    </div>
</div>

<script type="text/javascript">
$(function() {
  $('.nyroModal').nyroModal();
});
</script>

<script type="text/javascript">
   $('.flexi').flexigrid({width: $('#header').width() - 80});
 </script>