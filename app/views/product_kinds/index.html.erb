<% title "Listing product Types" %>
<%= link_to image_tag("new.png"), new_product_kind_path %>
<br /><br />
<table class="list">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Disabled</th>
    <th>Action</th>

  </tr>

<% @product_kinds.each do |product_kind| %>
  <tr class="<%= cycle "odd", "even"  %> " style="text-align: center">
    <td><%= product_kind.name %></td>
    <td><%= product_kind.description %></td>
    <td><%= product_kind.disabled %></td>
    <td><%= link_to 'Show', product_kind %>
    | <%= link_to 'Edit', edit_product_kind_path(product_kind) %>
    | <%= link_to 'Destroy', product_kind, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


