<% content_for :head do %>
  <%= javascript_include_tag "smo" %>
<% end %>
 <%= link_to image_tag("backs.png", :title => "Back"), edit_product_path(@product) %>
 <br/><hr/><br/>
 <%= form_tag remove_rack_product_path(@product) do %>
<div class="mg10 exhibiton ex01">
    <div class="exHead">
        <div class="hTxt">
            <div class="hTxtContent"><h2>Product Details</h2></div>
        </div>
        <div class="hLeft"></div>
        <div class="hRight"></div>
    </div>
    <div class="exBody">
        <div class="content">
          <table class="list">
            <tr>
             <th>Code</th>
             <th>InHouse Code</th>
             <th>Short description</th>
             <th>Full description</th>
            </tr>
           <tr class="<%= cycle "odd", "even"  %> " >
             <td align="center"> <%= @product.code %></td>
             <td align="center"> <%= @product.in_house_code %></td>
             <td align="center"> <%= @product.short_description %></td>
             <td align="center"> <%= @product.full_description %></td>

           </tr>
          </table>
       
           </div>
   </div>
    <div class="exFoot">
        <div class="fLeft"></div>
        <div class="fRight"></div>
    </div>
</div>
<br/><hr/>

 <div class="mg10 exhibiton ex01">
    <div class="exHead">
        <div class="hTxt">
            <div class="hTxtContent"><h2>Product Rack </h2></div>
        </div>
        <div class="hLeft"></div>
        <div class="hRight"></div>
    </div>
    <div class="exBody">
        <div class="content">
              <table class="list">
                <tr>
                     <th style="width:8%">Remove</th>
                     <th align="left">Rack Name</th>
                     <th align="left">Description</th>
                </tr>
                  <% @stock_location.each do |u| %>
                 <tr class="<%= cycle "odd", "even"  %> ">
                   <td align="center"> <%= check_box_tag("item[#{u.id.to_s}][selected]")  %></td>
                   <td><%= u.fullname %></td>
                   <td><%= u.product_rack.description %></td>
                 </tr>
                <% end %>
                </table>
         
      <%= submit_tag "Remove Rack" %>
    <% end %>
    
 </div>
   </div>
    <div class="exFoot">
        <div class="fLeft"></div>
        <div class="fRight"></div>
    </div>
</div>
<br/><hr/>
<%= form_tag add_product_product_path(@product) do %>
<div class="mg10 exhibiton ex01">
  <div class="exHead">
        <div class="hTxt">
            <div class="hTxtContent"><h2>Add Product Location </h2></div>
        </div>
        <div class="hLeft"></div>
        <div class="hRight"></div>
    </div>
    <div class="exBody">
        <div class="content">
              <table class="flexi" style="font-size: 12px">
                   <thead>
                    <tr>
                    <th width="80" align="center" style="font-size: 12px"><strong><input type="checkbox" name="checkall" onclick="checkUncheckAll(this);"/></strong></th>
                    <th width="280" align="left" style="font-size: 12px"><strong>Location Name</strong></th>
                    <th width="480" align="left" style="font-size: 12px"><strong>Rack Name</strong></th>
                     
                </tr>
                   </thead><tbody>
                  <% @show_rack.each do |u| %>
                 <tr class="<%= cycle "odd", "even"  %> ">
                   <td style="text-align: center"> <%= check_box_tag("item[#{u.id.to_s}][selected]")  %></td>
                   <td><%= u.product_location.name %></td>
                    <td><%= u.name %></td>
                 </tr>
                <% end %>
                 </tbody>
                </table>

      <%= submit_tag "Add Rack" %>
    <% end %>

 </div>
   </div>
    <div class="exFoot">
        <div class="fLeft"></div>
        <div class="fRight"></div>
    </div>
</div>


                  <script type="text/javascript">
                   $('.flexi').flexigrid({width: $('#header').width() - 80});
                   </script>




