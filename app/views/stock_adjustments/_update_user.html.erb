<div class="mg10 exhibiton ex01">
        <div class="exHead">
            <div class="hTxt">
               <div class="hTxtContent"><h2>Stock Adjustment Details</h2></div>
            </div>
            <div class="hLeft"></div>
            <div class="hRight"></div>
        </div>
        <div class="exBody">
            <div class="content">
                <%= form_tag update_info_stock_adjustment_path(@stock_adjustment) do %>
                <table class="list">
                   <tr>
                     <th>Stock Adjustment Number</th>
                    <th>Date</th> 
                    <th>User</th>
                    <th>Status</th>
                  </tr>
                  <tr align="center">
                    <td><%=h @stock_adjustment.stock_adjustment_number %></td>
                     <td><input type="text" size="12" id="datepicker" name="stock_adjustment[stock_date]" value="<%= @stock_adjustment.stock_date.strftime("%d-%m-%Y") %>"/></td>
                    <td><%=h @stock_adjustment.user.name  rescue "-" %></td>
                    <td><%= raw @stock_adjustment.status %> </td>
                  </tr>
                  </table>
              
                <table class="list">
                  <tr align="left">
                   <th align="left">Remark</th>
                </tr>
                <tr align="left">
                <td colspan="8"> <%= text_area_tag "stock_adjustment[remark]", @stock_adjustment.remark,{:style=>"width:600px;height:15px; "} %></td>
                </tr>
                </table>
                <p>
                   <%= submit_tag "Update info" %>
                </p>
                <% end %>
                </div>
</div>
    <div class="exFoot">
        <div class="fLeft"></div>
        <div class="fRight"></div>
    </div>
    </div>
<script>
	$(function() {
		$( "#datepicker" ).datepicker({
			showOn: "button",
			buttonImage: "/images/calendar2.png",
			buttonImageOnly: true,
                        dateFormat: 'dd-mm-yy'
		});
	});
	</script>