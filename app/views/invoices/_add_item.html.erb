
<fieldset style="padding-left: 10px;padding-right: 5px;padding-bottom: 10px; width: 98%; height: 360px;background-color: #df9"><legend>Add item</legend>

 <a id="btn1" href="#"><strong>Simple Search</strong></a>  |
<a id="btn2" href="#"><strong>Advanced Search</strong></a>
<div id="log"></div>


<div id="first" class="box"><%= render "second_search" %></div>
<div id="second" class="box" style="display:none"><%= render "first_search" %></div>

<script>
$("#btn1").click(function() {
  function complete() {
    $("#first").show();
  }
  $("#second").fadeOut(400, complete);
  $("#log").empty();
});

$("#btn2").click(function() {
  function complete() {
    $("#second").show();
  }
  $("#first").fadeOut(400, complete);
   $("#log").empty();

});


</script>
    </fieldset>




