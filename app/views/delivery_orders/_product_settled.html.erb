<div class="mg10 exhibiton ex01">
    <div class="exHead">
        <div class="hTxt">
           <div class="hTxtContent"><h2>Delivery Order Item Details</h2></div>
        </div>
        <div class="hLeft"></div>
        <div class="hRight"></div>
    </div>
    <div class="exBody">
    <div class="content">
                 <table class="flexi" style="font-size: 12px"  >
                  <thead>
                    <tr>
                    <th width="50" align="center" style="font-size: 12px"><strong>No</strong></th>
                    <th width="100" align="center" style="font-size: 12px"><strong>Code</strong></th>
                    <th width="250"align="center" style="font-size: 12px"><strong>Description</strong></th>
                    <th width="80"align="center" style="font-size: 12px"><strong>UOM</strong></th>
                    <th width="80"align="center" style="font-size: 12px"><strong>Price/Unit</strong></th>
                    <th width="100"align="center" style="font-size: 12px"><strong>Location</strong></th>
                    <th width="80"align="center" style="font-size: 12px"><strong>Order Qty</strong></th>
                    <th width="80"align="center" style="font-size: 12px"><strong> Delivery Qty</strong></th>
                    
                    <th width="80"align="center" style="font-size: 12px"><strong>Balance</strong></th>
                    <th width="300"align="center" style="font-size: 12px"><strong>Remark</strong></th>
                   </tr>
                  </thead>
                    <tbody>
                    <% line = 0 %>
                    <% @items.each do |i| %>
                    <% line += 1%>
                    <% po_deliver_qty = i.packing_list_item.collected_quantity %>

                      <tr class="<%= cycle "odd", "even"  %> ">
                      <td align="center"><%= line.to_s %></td>
                      <td align="center"><%= i.product.code rescue "-" %> </td>
                      <td align="center"><%= i.product.full_description rescue "-" %> </td>
                      <td align="center"><%= i.product_uom.name rescue "-" %> </td>
                       <td align="center"><%= "%.2f" %i.unit_price%> </td>
                      <td align="center"><%= i.stock_location.product_rack.name rescue "-"%></td>
                      <td align="center"><%= po_deliver_qty %> </td>
                      <td align="center"><%= i.delivered_quantity%> </td>
                      <td align="center"><%= i.quantity - po_deliver_qty %> </td>
                     <td align="left"><%= i.remark %> </td>
                   </tr>
                  
                    <% end %>
                 </tbody>
</table>
</div>
 </div>
    <div class="exFoot">
        <div class="fLeft"></div>
        <div class="fRight"></div>
    </div>
</div>

<script type="text/javascript">
 $('.flexi').flexigrid({width: $('#header').width() - 80});
 </script>
