<% title "Listing Cities" %>

<%= link_to image_tag("new.png"), new_city_path %>
<br /><br />
<%= render "search" %>
<br><hr /><br>
<div class="mg10 exhibiton ex01">
    <div class="exHead">
        <div class="hTxt">
           <div class="hTxtContent"><h2>Cities</h2></div>
        </div>
        <div class="hLeft"></div>
        <div class="hRight"></div>
    </div>
    <div class="exBody">
        <div class="content">
            <%= will_paginate @salesmens %>
            <br />
          <table class="list">

            <tr>
              <th style="text-align: left">Name</th>
              <th style="text-align: left">Description</th>
              <th>Action</th>
            
            </tr>

          <% @cities.each do |city| %>
            <tr>
              <td><%= city.name %></td>
              <td><%= city.description %></td>
              <td align ="center" ><%= link_to 'Show', city %>
              <%= link_to 'Edit', edit_city_path(city) %>
              <%= link_to 'Destroy', city, :confirm => 'Are you sure?', :method => :delete %></td>
            </tr>
          <% end %>
          </table>

<br />

</div>
   </div>
    <div class="exFoot">
        <div class="fLeft"></div>
        <div class="fRight"></div>
    </div>
</div>
