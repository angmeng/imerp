<fieldset style="background-color: khaki;padding: 8px 8px 8px 8px">
  <legend>Invoices</legend>

<table class="list">
  <tr>
    <th>Invoice No</th>
    <th>Customer</th>
    <th>Action</th>
  </tr>
<% @sales_order.invoices.each do |po| %>
  <tr class="<%= cycle("odd", "even") %>" align="center">
    <td><%= po.invoice_number   %></td>
    <td><%= po.customer.name   %></td>
    <td><%= link_to "show", po  %></td>
  </tr>
<% end %>
</table>
</fieldset>