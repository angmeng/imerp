<div class="mg10 exhibiton ex01">
    <div class="exHead">
        <div class="hTxt">
           <div class="hTxtContent"><h2>SO Item Details</h2></div>
        </div>
        <div class="hLeft"></div>
        <div class="hRight"></div>
    </div>
    <div class="exBody">
        <div class="content">
         <table class="flexi" style="font-size: 12px">
             <thead>
              <tr>
                <th width="50" align="center" style="font-size: 12px"><strong>No</strong></th>
                <th width="100" align="center" style="font-size: 12px"><strong>Status</strong></th>
                <th width="250" align="center" style="font-size: 12px"><strong>Supplier</strong></th>
                <th width="100" align="center" style="font-size: 12px"><strong>Code</strong></th>
                <th width="200" align="center" style="font-size: 12px"><strong>Description</strong></th>
                <th width="80" align="center" style="font-size: 12px"><strong>UOM</strong></th>
                <th width="80" align="center" style="font-size: 12px"><strong>Quantity</strong></th>
                <th width="80" align="center" style="font-size: 12px"><strong>Price/Unit</strong></th>
                <th width="80" align="center" style="font-size: 12px"><strong>Discount</strong></th>
                <th width="80" align="center" style="font-size: 12px"><strong>Total</strong></th>
                <th width="300" align="center" style="font-size: 12px"><strong>Remark</strong></th>
              </tr>
             </thead>
             <tbody>

                <% line = 0 %>
               <% total_amount = 0 %>
              <% @sales_order.sales_order_items.each do |p| %>
               <%if p.confirmed?%>
                <% total_amount += p.total_after_disc %>
               <%end%>
               <% line += 1%>
                <tr class="<%= cycle "odd", "even"  %> ">
                <td style="text-align: center"><%= line.to_s %></td>
                <td align="center"><%=raw p.status  %> </td>
                <td style="text-align: center"><%= p.customer.name rescue "-" %> </td>
                <td style="text-align: center"><%= p.product.code  %> </td>
                <td style="text-align: center"><%= p.product.full_description  %> </td>
                <td style="text-align: center"><%= p.product_uom.name rescue "-" %></td>
                <td style="text-align: center"><%= p.quantity %> </td>
                <td style="text-align: center"><%= "%.2f" % p.unit_price %> </td>
                <td style="text-align: center"><%= p.discounts %> </td>
                <td style="text-align: center"><%= "%.2f" % p.total_after_disc  %> </td>
                <td style="text-align: center"><%=   p.remark  %> </td>
              </tr>
            <% end %>
             </tbody>
            </table>
           <table>
              <tr>
               <td colspan="2"align="right" width="1100px"><strong>Total Amount of confirm item: </strong> <%= total_amount %></td>
              </tr>
            </table>
</div>
   </div>
    <div class="exFoot">
        <div class="fLeft"></div>
        <div class="fRight"></div>
    </div>
</div>

 <script type="text/javascript">
 $('.flexi').flexigrid({width: $('#header').width() - 80});
 </script>
