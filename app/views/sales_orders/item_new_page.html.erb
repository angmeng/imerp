<% content_for :head do %>
  <%= javascript_include_tag "smo" %>
<% end %>
 <%= link_to image_tag("backs.png", :title => "Back"), edit_sales_order_path(@sales_order) %>
<%= form_tag removed_item_sales_order_path(@sales_order) do %>
<div class="mg10 exhibiton ex01">
    <div class="exHead">
        <div class="hTxt">
            <div class="hTxtContent"><h2>SO Item</h2></div>
        </div>
        <div class="hLeft"></div>
        <div class="hRight"></div>
    </div>
    <div class="exBody" height ="">
        <div class="content">

            <table class="flexi" style="font-size: 12px">
             <thead>
              <tr>
                <th width="80" align="center" style="font-size: 12px"><strong><input type="checkbox" name="checkall" onclick="checkUncheckAll(this);"/></strong></th>
                <th width="130" align="center" style="font-size: 12px"><strong>Status</strong></th>
                <th width="180" align="center" style="font-size: 12px"><strong>Code</strong></th>
                <th width="300" align="center" style="font-size: 12px"><strong>Description</strong></th>
                <th width="130" align="center" style="font-size: 12px"><strong>UOM</strong></th>
                <th width="130" align="center" style="font-size: 12px"><strong>Qty</strong></th>
                <th width="130" align="center" style="font-size: 12px"><strong>Unit Price</strong></th>
                <th width="130" align="center" style="font-size: 12px"><strong>Discount</strong></th>
              </tr>
             </thead>
             <tbody>
            <% @sales_order.sales_order_items.each do |p| %>
              <tr class="<%= cycle "odd", "even"  %> ">
                <td style="text-align: center"><%= check_box_tag("item[#{p.id.to_s}][selected]", {}, p.confirmed?)  %> </td>
                <td align="center"><%=raw p.status  %> </td>
                <td style="text-align: center"><%= p.product.code  %> </td>
                <td style="text-align: center"><%= p.product.full_description  %> </td>
                <td style="text-align: center"><%= p.product_uom.name rescue "-" %>
                <td style="text-align: center"><%= p.quantity %> </td>
                <td style="text-align: center"><%= "%.2f" %p.unit_price %> </td>
                <td style="text-align: center"><%= p.discounts %> </td>
             </tr>

              <% end %>
               </tbody>
            </table>
         <%= submit_tag "Remove items" unless @sales_order.sales_order_items.empty? %>


 </div>
    </div>
    <div class="exFoot">
        <div class="fLeft"></div>
        <div class="fRight"></div>
    </div>
</div>

<% end %>

 <script type="text/javascript">
 $('.flexi').flexigrid({width: $('#header').width() - 80});
 </script>



<hr><br>

  <div class="mg10 exhibiton ex01">
    <div class="exHead">
        <div class="hTxt">
            <div class="hTxtContent"><h2>Add Item</h2></div>
        </div>
        <div class="hLeft"></div>
        <div class="hRight"></div>
    </div>
    <div class="exBody" height ="">
        <div class="content">
            <%= render 'for_search' %>
          </div>
    </div>
    <div class="exFoot">
        <div class="fLeft"></div>
        <div class="fRight"></div>
    </div>
</div>


           