
<div class="mg10 exhibiton ex01">
    <div class="exHead">
        <div class="hTxt">
            <div class="hTxtContent"><h2>Good Receive Note Details</h2></div>
        </div>
        <div class="hLeft"></div>
        <div class="hRight"></div>
    </div>
    <div class="exBody">
        <div class="content">
            <%= form_tag update_info_goods_receive_note_path(@goods_receive_note) do %>
            <table class="list">
              <tr>
                <th>GRN No</th>
                <th>Date</th>
                <th>S/N</th>
                <th>DO No</th>
                <th>Invoice No</th>
                <th>PO No</th>
                <th>Supplier</th>
                <th>Status</th>
              </tr>
              <tr align="center">
                <td><%=  @goods_receive_note.grn_number %></td>
                 <td><input type="text" size="12" id="datepicker" name="goods_receive_note[grn_date]" value="<%= @goods_receive_note.grn_date.strftime("%d-%m-%Y") %>"/></td>
                <td><%= text_field_tag "goods_receive_note[serial_number]",@goods_receive_note.serial_number, :size => 10 %> </td>
                <td><%= text_field_tag "goods_receive_note[do_number]", @goods_receive_note.do_number, :size => 10 %> </td>
                <td><%= text_field_tag "goods_receive_note[invoice_number]",@goods_receive_note.invoice_number, :size => 10 %> </td>
                <td><%= @goods_receive_note.purchase_order.purchase_order_number %></td>
                <td><%= @goods_receive_note.supplier.name %></td>
                <td><%=raw @goods_receive_note.status %></td>
              </tr>
              <tr>
                <td align="center"><strong>Remark</strong></td>
                <td colspan="8"> <%= text_area_tag "goods_receive_note[remark]", @goods_receive_note.remark, :size => "120x1" %></td>
              </tr>
              <tr>
                <td colspan="9" align="center"><%= submit_tag "Update info"  %></td>
              </tr>
            </table>

            <% end %>
</div>
   </div>
    <div class="exFoot">
        <div class="fLeft"></div>
        <div class="fRight"></div>
    </div>
</div>
<script>
	$(function() {
		$( "#datepicker" ).datepicker({
			showOn: "button",
			buttonImage: "/images/calendar2.png",
			buttonImageOnly: true,
                        dateFormat: 'dd-mm-yy'
		});
	});
	</script>