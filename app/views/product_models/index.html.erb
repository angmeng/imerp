<% title "Listing Product Models" %>
<%= link_to image_tag("new.png"), new_product_model_path %>
<br /><br />
<div class="mg10 exhibiton ex01">
    <div class="exHead">
        <div class="hTxt">
           <div class="hTxtContent"><h2>Product Model</h2></div>
        </div>
        <div class="hLeft"></div>
        <div class="hRight"></div>
    </div>
    <div class="exBody">
        <div class="content">
              <%= will_paginate @product_models %>
                <table class="list">
                  <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Disabled</th>
                    <th>Action</th>

                  </tr>

                <% @product_models.each do |product_model| %>
                  <tr class="<%= cycle "odd", "even"  %> " style="text-align: center">
                    <td><%= product_model.name %></td>
                    <td><%= product_model.description %></td>
                    <td><%= product_model.disabled %></td>
                    <td><%= link_to 'Show', product_model %>
                    | <%= link_to 'Edit', edit_product_model_path(product_model) %>
                    | <%= link_to 'Destroy', product_model, :confirm => 'Are you sure?', :method => :delete %></td>
                  </tr>
                <% end %>
                </table>
 
      </div>
</div>
    <div class="exFoot">
        <div class="fLeft"></div>
        <div class="fRight"></div>
    </div>
    </div>
