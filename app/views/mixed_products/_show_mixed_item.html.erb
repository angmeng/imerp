<div class="mg10 exhibiton ex01">
    <div class="exHead">
        <div class="hTxt">
           <div class="hTxtContent"><h2>Mixed item</h2></div>
        </div>
        <div class="hLeft"></div>
        <div class="hRight"></div>
    </div>
    <div class="exBody">
        <div class="content">
             <table class="flexi" style="font-size: 12px">
                   <thead>
                    <tr>
                  <th width="200" align="center"style="font-size: 12px"><strong>Product</strong></th>
                  <th width="200" align="center"style="font-size: 12px"><strong>UOM</strong></th>
                  <th width="301" align="center"style="font-size: 12px"><strong>Short Description</strong></th>
                  <th width="200" align="center"style="font-size: 12px"><strong>Quantity</strong></th>
                  <th width="200" align="center"style="font-size: 12px"><strong>Action</strong></th>
                 </tr>
                     </thead>
                   <tbody>
                <% @product.mixed_items.each do |p| %>
                 <tr class="<%= cycle "odd", "even"  %> " style="text-align: center">
                  <td><%= p.product.code %></td>
                  <td style="text-align: center"><%= p.product.product_uom.name rescue "-" %> </td>
                  <td><%= p.product.short_description %></td>
                   <td><%= p.quantity rescue '-' %></td>
                  <td><%= link_to "Remove", p, :confirm => "Are you sure?", :remote => true, :method => :delete %>
                  </td>
                 </tr>
               <% end %>
                    </tbody>
                  </table>
          </div>
   </div>
    <div class="exFoot">
        <div class="fLeft"></div>
        <div class="fRight"></div>
    </div>
</div>
<script type="text/javascript">
                   $('.flexi').flexigrid({width: $('#header').width() - 80});
                   </script>
