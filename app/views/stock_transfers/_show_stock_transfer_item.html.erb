     <div class="mg10 exhibiton ex01">
        <div class="exHead">
            <div class="hTxt">
               <div class="hTxtContent"><h2>Stock Transfer Item Details</h2></div>
            </div>
            <div class="hLeft"></div>
            <div class="hRight"></div>
        </div>
        <div class="exBody">
            <div class="content">
       <br/><br/>
           <table class="flexi" style="font-size: 12px">
            <thead>
            <tr>
                      <th width="50" align="center"style="font-size: 12px"><strong>No</strong></th>
                      <th width="150" align="center"style="font-size: 12px"><strong>Code</strong></th>
                      <th width="240" align="center"style="font-size: 12px"><strong>Description</strong></th>
                      <th width="120" align="center"style="font-size: 12px"><strong>UOM</strong></th>
                      <th width="150" align="center"style="font-size: 12px"><strong>From location</strong></th>
                       <th width="150" align="center"style="font-size: 12px"><strong>To location</strong></th>
                      <th width="120" align="center"style="font-size: 12px"><strong>Quantity</strong></th>
                      <th width="400" align="center"style="font-size: 12px"><strong>Remark</strong></th>
               </tr>
             </thead>
             <tbody>

            <% line = 0 %>
            <% @stock_transfer.stock_transfer_items.each do |c|  %>
            <% line += 1%>

            <tr class="<%= cycle "odd", "even"  %> ">
               <td align="center"><%= line.to_s %></td>
               <td align="center"><%= c.product.code %></td>
               <td align="center"><%= c.product.short_description %></td>
               <td align="center"><%= c.product_uom.name rescue "-" %></td>
               <td align="center"><%= c.from_stock_location.product_rack.name rescue "-"%></td>
               <td align="center"><%= c.to_stock_location.product_rack.name rescue "-"%></td>
               <td align="center"><%= c.quantity %></td>
               <td><%= c.description %></td>
            </tr>
            <% end %>
            </tbody>
           </table>
</div>
</div>
    <div class="exFoot">
        <div class="fLeft"></div>
        <div class="fRight"></div>
    </div>
    </div>
<script type="text/javascript">
                   $('.flexi').flexigrid({width: $('#header').width() - 80});
                   </script>