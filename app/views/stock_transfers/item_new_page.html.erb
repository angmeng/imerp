<% content_for :head do %>
  <%= javascript_include_tag "smo" %>
<% end %>
 <%= link_to image_tag("backs.png", :title => "Back"),edit_stock_transfer_path(@stock_transfer) %>
 <div class="mg10 exhibiton ex01">
        <div class="exHead">
            <div class="hTxt">
               <div class="hTxtContent"><h2>Stock Transfer Items</h2></div>
            </div>
            <div class="hLeft"></div>
            <div class="hRight"></div>
        </div>
        <div class="exBody">
            <div class="content">
                  <%= form_tag removed_item_stock_transfer_path(@stock_transfer) do %>
                  <table class="flexi" style="font-size: 12px">
                 <thead>
                  <tr>
                    <th width="100" align="center"><strong><input type="checkbox" name="checkall" onclick="checkUncheckAll(this);"/></strong></th>
                   <th width="240" align="center"style="font-size: 12px"><strong>Code</strong></th>
                   <th width="240" align="center"style="font-size: 12px"><strong>UOM</strong></th>
                   <th width="600" align="center"style="font-size: 12px"><strong>Description</strong></th>
                    
                  </tr>
                 </thead>
                 <tbody>
                <% @stock_transfer.stock_transfer_items.each do |p| %>
                  <tr class="<%= cycle "odd", "even"  %> ">
                    <td align="center"><%= check_box_tag("item[#{p.id.to_s}][selected]")%></td>
                    <td style="text-align: center"><%= p.product.code  %> </td>
                    <td style="text-align: center"><%= p.product_uom.name rescue"-" %> </td>
                    <td style="text-align: center"><%= p.product.short_description  %> </td>
                 
                 </tbody>
                  <% end %>
                  </table>
                       <%= submit_tag "Remove items" unless @stock_transfer.stock_transfer_items.empty? %>
                  <% end %>

                  <script type="text/javascript">
                   $('.flexi').flexigrid({width: $('#header').width() - 80});
                   </script>

                
  </div>
  </div>
      <div class="exFoot">
          <div class="fLeft"></div>
          <div class="fRight"></div>
      </div>
      </div>
<hr>
        <div class="mg10 exhibiton ex01">
            <div class="exHead">
               <div class="hTxt">
                   <div class="hTxtContent"><h2>Add Items</h2></div>
                  </div>
                <div class="hLeft"></div>
                <div class="hRight"></div>
            </div>
            <div class="exBody">
            <div class="content">
                <%= render "add_item" %>
            </div>
            </div>
          <div class="exFoot">
              <div class="fLeft"></div>
              <div class="fRight"></div>
          </div>
          </div>