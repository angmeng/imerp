<% title "Listing Stock Transfer" %>
<%= link_to image_tag("new.png"), new_stock_transfer_path %>
<br /><br />
<%= render 'search_form'  %>
<br><hr /></br>

<div class="mg10 exhibiton ex01">
    <div class="exHead">
        <div class="hTxt">
           <div class="hTxtContent"><h2>Stock Transfer</h2></div>
        </div>
        <div class="hLeft"></div>
        <div class="hRight"></div>
    </div>
    <div class="exBody">
        <div class="content">
            <%= will_paginate @stock_transfers %>
            <br />

            <table class="list">
              <tr>
                <th>Date</th>
                <th>Stock Transfer Number</th>
                <th>User</th>
                <th>Status</th>
                <th>Post Quantity Status</th>
                 <th>Void Status</th>
                <th>Action</th>

              </tr>

            <% @stock_transfers.each do |stock_transfer| %>
              <tr class="<%= cycle "odd", "even"  %> " style="text-align: center">
                <td><%= stock_transfer.stock_transfer_date.strftime("%d-%m-%Y") %></td>
                <td><%= stock_transfer.stock_transfer_number %></td>
               <td><%= stock_transfer.user.name rescue "-" %></td>
                <td align="center"><%=raw stock_transfer.status %></td>
                 <td align="center"><%=raw stock_transfer.quantity_post_status %></td>
                 <td align="center"><%=raw stock_transfer.void_status %></td>
                <td><%= link_to 'Edit', edit_stock_transfer_path(stock_transfer) %>
                | <%= link_to 'Destroy', stock_transfer, :confirm => 'Are you sure?', :method => :delete %></td>
              </tr>
            <% end %>
            </table>

            </div>
   </div>
    <div class="exFoot">
        <div class="fLeft"></div>
        <div class="fRight"></div>
    </div>
</div>
