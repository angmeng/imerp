<%= image_tag("add_item2.png")%><%= link_to 'Add Stock Disposal Item', item_new_page_stock_disposal_path(@stock_disposal) %>
<%= form_tag update_item_stock_disposal_path(@stock_disposal) do %>
<div class="mg10 exhibiton ex01">
        <div class="exHead">
            <div class="hTxt">
               <div class="hTxtContent"><h2>Stock Disposal Items</h2></div>
            </div>
            <div class="hLeft"></div>
            <div class="hRight"></div>
        </div>
        <div class="exBody">
            <div class="content">
                <table class="flexi" style="font-size: 12px">
                 <thead>
                  <tr>
                    <th width="50" align="center"><strong><input type="checkbox" name="checkall" onclick="checkUncheckAll(this);"/></strong></th>
                    <th width="120" align="center" style="font-size: 12px"><strong>Code</strong></th>
                    <th width="223" align="center" style="font-size: 12px"><strong>Description</strong></th>
                    <th width="150" align="center" style="font-size: 12px"><strong>Product UOM</strong></th>
                    <th width="150" align="center" style="font-size: 12px"><strong>Location</strong></th>
                    <th width="150" align="center" style="font-size: 12px"><strong>Quantity</strong></th>
                    <th width="300" align="center" style="font-size: 12px"><strong>Remark</strong></th>

                  </tr>
                 </thead>
                 <tbody>
                <% @stock_disposal.stock_disposal_items.each do |p| %>
                  <tr class="<%= cycle "odd", "even"  %> ">
                    <td align="center"><%= check_box_tag("item[#{p.id.to_s}][selected]")%></td>
                    <td style="text-align: center"><%= p.product.code  %> </td>
                    <td style="text-align: center"><%= p.product.short_description  %> </td>

                    <td style="text-align: center"><%= select_tag("item[#{p.id.to_s}][product_uom_id]", options_for_select(p.product.product_uom_options.map {|c| [c.name, c.id]}, p.product_uom_id))  %> </td>
                    <td style="text-align: center"><%= select_tag "item[#{p.id.to_s}][stock_location_id]", options_for_select(p.product.stock_location_options, p.stock_location_id),:include_blank => 'None' %> </td>
                    <td style="text-align: center"><%= text_field_tag("item[#{p.id.to_s}][quantity]", {}, :value => p.quantity, :size => 5) %></td>
                   <td style="text-align: center"><%= text_area_tag "item[#{p.id.to_s}][description]", p.description,{:style=>"width:280px;height:15px; "}%> </td>
                  </tr>
                 </tbody>
                 <% end %>
                </table>
                <table>
                  <tr>
                   <td  align="center"><%= submit_tag "Remove items" unless @stock_disposal.stock_disposal_items.empty? %></td>
                    <td colspan="3"></td>
                    <td  align="center"><%= submit_tag "Update items" unless @stock_disposal.stock_disposal_items.empty?  %></td>
                    <td colspan="2"></td>
                  </tr>
                </table>
                <% end %>
               <script type="text/javascript">
               $('.flexi').flexigrid({width: $('#header').width() - 70});
               </script>
                </div>
</div>
    <div class="exFoot">
        <div class="fLeft"></div>
        <div class="fRight"></div>
    </div>
    </div>



