<% title "Listing Stock Disposal" %>
<%= link_to image_tag("new.png"), new_stock_disposal_path %>
<br /><br />
<%= render 'search_form'  %>
<br><hr /><br>

<div class="mg10 exhibiton ex01">
    <div class="exHead">
        <div class="hTxt">
           <div class="hTxtContent"><h2>Stock Disposal</h2></div>
        </div>
        <div class="hLeft"></div>
        <div class="hRight"></div>
    </div>
    <div class="exBody">
        <div class="content">
            <%= will_paginate @stock_disposals %>
            <br />
            <table class="list">
              <tr>
                 <th>Date</th>
                <th>Stock Disposal Number</th>
               
                <th>User</th>
                 <th>Status</th>
                 <th>Post Quantity Status</th>
                  <th>Void Status</th>
                <th>Action</th>
            </tr>

            <% @stock_disposals.each do |stock_disposal| %>
              <tr class="<%= cycle "odd", "even"  %> " style="text-align: center">
                 <td><%= stock_disposal.stock_disposal_date.strftime("%d-%m-%Y") %></td>
                <td><%= stock_disposal.stock_disposal_number %></td>
               
                <td><%= stock_disposal.user.name rescue "-" %></td>
                <td align="center"><%=raw stock_disposal.status %></td>
                <td align="center"><%=raw stock_disposal.quantity_post_status %></td>
                <td align="center"><%=raw stock_disposal.void_status %></td>
                <td><%= link_to 'Edit', edit_stock_disposal_path(stock_disposal) %>
                | <%= link_to 'Destroy', stock_disposal, :confirm => 'Are you sure?', :method => :delete %></td>
              </tr>
            <% end %>
            </table>

            </div>
   </div>
    <div class="exFoot">
        <div class="fLeft"></div>
        <div class="fRight"></div>
    </div>
</div>