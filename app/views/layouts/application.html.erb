<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html lang='en' xml:lang='en' xmlns='http://www.w3.org/1999/xhtml'>
  <head>
    <meta content='text/html; charset=utf-8' http-equiv='Content-Type' />
    <title><%= h(@content_for_title || "DSS Inventory System") %></title>
  
     <link rel="stylesheet" type="text/css" href="/css/flexigrid.pack.css" />
     <%= stylesheet_link_tag 'layout', 'menu_style', 'jquery-ui-1.8.4.custom', "token-input-facebook", 'jquery.notifyBar', 'nyroModal',:cache => 'cache/all' %>
     <%= javascript_include_tag :defaults, "jquery.tokeninput" , 'flexigrid.pack', :cache => 'cache/all'  %>
     <%= javascript_include_tag 'jquery.simplemodal','basic.js','jquery.nyroModal' %>

      <%= javascript_include_tag 'jquery.nyroModal.anims.fade','jquery.nyroModal.filters.data','jquery.nyroModal' %>
      <%= javascript_include_tag 'jquery.nyroModal.filters.dom','jquery.nyroModal.filters.iFrame','jquery.nyroModal.filters.IframeForm' %>
      <%= javascript_include_tag 'jquery.nyroModal.filters.embedly','jquery.nyroModal.filters.gallery','jquery.nyroModal.filters.image' ,'jquery.nyroModal.filters.title' %>
      <%= javascript_include_tag 'jquery.nyroModal.filters.form','jquery.nyroModal.filters.formFile','jquery.nyroModal.filters.link' ,'jquery.nyroModal.filters.swf' %>

      <%= csrf_meta_tag %>
      <%= yield(:head) %>
  </head>
  <body>
         <div id='header'><%= render :partial => '/layouts/header' %></div>
          <% if is_user? %>
            <%= render :partial => '/layouts/user_menu'  %>
          <% end %>
         <table style="height:auto" cellpadding='0' cellspacing='0' class='tabbed' width='100%'>
           <tr>
            <td class='main' id='main' valign='top'>
              <% if show_title? %>
                <div class='title' id='title' style="clear: both;padding-top: 10px;">
                  <%= @content_for_title %>
               </div>
             <% end %>
             <br />
             <%= yield %>
           </td>
          </tr>
        </table>
    
    <script type="text/javascript" src="/javascripts/jquery.notifyBar.js"></script>
    <script type="text/javascript">
  
      $(function() {
      <% if flash[:notice] %>
      $.notifyBar({ cls: "success", html: "<%=raw flash[:notice] %>", delay: 6000 });
      <% end %>
     
      <% if flash[:error] %>
      $.notifyBar({ cls: "error", html: "<%= raw flash[:error] %>", delay: 6000 });
      <% end %>
        
       <% if flash[:info] %>
      $.notifyBar({ cls: "success", html: "<%= raw flash[:info] %>", delay: 6000 });
      <% end %>
      
    });
    
    </script>
     
    <%= render :partial => "/layouts/footer"%>
    <%= yield(:footer) %>

  </body>
</html>
