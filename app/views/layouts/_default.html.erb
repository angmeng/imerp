<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html lang='en' xml:lang='en' xmlns='http://www.w3.org/1999/xhtml'>
  <head>
    <meta content='text/html; charset=utf-8' http-equiv='Content-Type' />
    <title><%= h(@content_for_title || "DSS Inventory System") %></title>
    <!-- tasks : index -->
     
      <%= stylesheet_link_tag 'layout', 'menu_style', 'jquery-ui-1.8.4.custom','demo','basic', :cache => 'cache/all' %>

  
    <link rel="stylesheet" type="text/css" href="/css/flexigrid.pack.css" />
    <link  rel="stylesheet" href="/colorbox/colorbox.css" media="screen"/>

      <%= javascript_include_tag 'jquery-1.4.2.min', 'jquery-ui-1.8.4.custom.min', 'rails', 'flexigrid.pack' %>
      <%= javascript_include_tag 'jquery.simplemodal','basic.js' %>
      <%= javascript_include_tag ("autocomplete-rails.js")%>
      <%= csrf_meta_tag %>
     <!--<script type="text/javascript" src="/javascripts/jquery-1.4.2.min.js"></script>
     <script type="text/javascript" src="/javascripts/jquery-ui-1.8.4.custom.min.js"></script>-->
     <script type="text/javascript">
        
	    $(function() {
		     $("#date").datepicker();
         $("#todate").datepicker();
	    });
	   </script>
    
z
      <%= yield(:head) %>
  </head>
  <body>
       <div id='header'>
        <%= render :partial => '/layouts/header' %>
       </div>
	   
	    <% if is_user? %>
	      <%= render :partial => '/layouts/user_menu'  %>
	    <% end %>
		
	<table width='100%'>
       <tr>
        <td valign='top'>
          <div style='float:left;margin-left:20px;margin-right:20px;width:95%;'>
	         <% flash.each do |name, msg| %>
	           <%= content_tag :p, raw(msg), :class => "flash_#{name}" %>
	         <% end  %>
          </div>
       </td>
      </tr>
    </table>
    
    <table cellpadding='0' cellspacing='0' class='tabbed' width='100%' style="height:auto">
       <tr>
        <td class='main' id='main' valign='top'>
          <% if show_title? %>
            <div class='title' id='title' style="clear: both;padding-top: 10px;"> 
              <%= @content_for_title %>
            </div>
         <%  end %>
         <br />
         <%= yield %>
       </td>
      </tr>
    </table>
       
   <%= render :partial => "/layouts/footer"%>  
    <%= yield(:footer) %>
  </body>
</html>
