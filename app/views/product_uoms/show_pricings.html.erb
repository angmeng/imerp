<% title "Pricing for UOM" %>
 <%= link_to image_tag("backs.png", :title => "Back"), edit_product_path(@product) + "#pricing" %>

  <% if @min_uom %>
   <h3>Pricing for uom - <%= @min_uom.product_uom.name %></h3>
   <table class="list">
    <tr>
      <th>Price Level</th>
      <th>Selling Price</th>
      <th></th>
    </tr>
    <% for pricing in @min_uom.product_pricings %>
     <tr class="<%= cycle "odd", "even"  %> " style="text-align: center">
      <td><%= pricing.price_level.name %></td>
      <td><%= pricing.selling_price %></td>
    </tr>
    <% end %>
    </table>
  <% end %>
<br /><br />
<div class="mg10 exhibiton ex01">
    <div class="exHead">
        <div class="hTxt">
            <div class="hTxtContent"><h2>Update price for uom - <%= @product_uom.name %></h2></div>
        </div>
        <div class="hLeft"></div>
        <div class="hRight"></div>
    </div>
    <div class="exBody">
        <div class="content">
            <%= form_tag update_pricings_product_uom_path(@item) do %>

             <table class="flexi" style="font-size: 12px">
             <thead>
                <tr>
                  <th width="400" align="center"style="font-size: 12px"><strong>Price Level</strong></th>
                   <th width="400" align="center"style="font-size: 12px"><strong>Selling Price</strong></th>
                  
                </tr>
             </thead>
             <tbody>

                <% @pricings.each do |u| %>
                  <tr class="<%= cycle "odd", "even"  %> " style="text-align: center">
                  <td>
                    <%= u.price_level.name %>
                  </td>
                  <td>
                    <%= text_field_tag "pricing["+u.id.to_s+"][selling_price]", u.selling_price %>
                  </td>
                </tr> <% end %>
                </tbody>
                </table>
              <%= submit_tag "Update" %>
            <% end %>

            <br />
</div></div>
    <div class="exFoot">
        <div class="fLeft"></div>
        <div class="fRight"></div>
    </div>
</div>
<script type="text/javascript">
                   $('.flexi').flexigrid({width: $('#header').width() - 400});
                   </script>