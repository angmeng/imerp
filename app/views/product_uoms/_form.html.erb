<%= simple_form_for(@product_uom) do |f| %>
<%= render "shared/error_messages", :target => @product_uom %>

  <div class="inputs">
    <%= f.input :name %>
    
    <%= f.input :description, :input_html => {:size => "40x2"} %>
    <%= f.input :builtin, :label => "Default" %>
    <%= f.input :min_uom, :label => "Min Uom Setting" %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
