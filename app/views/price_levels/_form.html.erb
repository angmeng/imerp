  </div>

  <div class="actions">
    <% if action_name == "new" %>
    <%= f.button :submit, :confirm => "It will take fews minute to generate the pricing based on all product, are you sure ?",  :disable_with => "Please wait ..." %>
    <% else %>
    <%= f.button :submit %>
    <% end %>
  </div>
<% end %>
