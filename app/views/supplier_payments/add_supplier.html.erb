 <%= link_to image_tag("backs.png", :title => "Back"), edit_supplier_payment_path(@supplier_payment) %>
<%= render 'search_supplier' %>
<br><hr><br>
 <%= form_tag update_info_supplier_payment_path(@supplier_payment) do %>
<div class="mg10 exhibiton ex01">
    <div class="exHead">
        <div class="hTxt">
           <div class="hTxtContent"><h2>Add Supplier</h2></div>
        </div>
        <div class="hLeft"></div>
        <div class="hRight"></div>
    </div>
    <div class="exBody">
        <div class="content">
          <%= submit_tag "Add supplier" unless @suppliers.empty? %><%= will_paginate @suppliers %>
         <table class="list"  >
          <tr>
              <th width="50" align="center" style="font-size: 12px"></th>
              <th>Code</th>
              <th>Name</th>
              <th>Company number</th>
              <th>City</th>
           </tr>
       <% @suppliers.each do |supplier| %>
                     <tr class="<%= cycle "odd", "even"  %> " style="text-align: center">
                      <td><%= radio_button_tag 'supplier_payment[supplier_id]',"#{supplier.id.to_s}"%></td>
                      <td><%= supplier.code %></td>
                      <td><%=  supplier.name %></td>
                      <td><%= supplier.company_number %></td>
                      <td><%= supplier.city.name rescue "-" %></td>
                    </tr>
              <% end %>
	</table>
        <%= submit_tag "Add supplier" unless @suppliers.empty? %>
   
</div>
   </div>
    <div class="exFoot">
        <div class="fLeft"></div>
        <div class="fRight"></div>
    </div>
</div>
<% end %>